{
  "name": "margv",
  "version": "1.0.0",
  "description": "simple node.js argv parser",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "serve": "tsc ./src/index.ts --watch --outDir ./dev",
    "build": "tsc ./src/index.ts --declaration --outDir ./dist && terser ./dist/index.js --output ./dist/index.js",
    "test": "npm run build && mocha ./test/*.spec.ts"
  },
  "keywords": [
    "argv", "cli", "process.argv", "argv parser"
  ],
  "author": "webigorkiev",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^15.6.1",
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "terser": "^5.7.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.3.2",
    "@types/mocha": "^8.2.2"
  },
  "dependencies": {
  }
}
